import os
import sys
from passlib.hash import pbkdf2_sha256

if len(sys.argv) < 2:
    print("Run: % sourcery_password_hash password")
else:
    password=sys.argv[1]
    passHash=pbkdf2_sha256.hash(password)
    print(passHash)
    
